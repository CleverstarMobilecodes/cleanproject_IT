<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/message_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_background"
    android:padding="@dimen/username_password_top_bottom_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:textColor="@color/main_font"
        android:textSize="@dimen/check_in_text_size"
        android:padding="@dimen/username_password_top_bottom_margin"
        android:gravity="center"
        android:id="@+id/dialog_message"
        android:text="Are you sure you want to mark it as completed?" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:padding="@dimen/username_password_top_bottom_margin"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/views_height"
            android:text="Cancel"
            android:textColor="@color/main_font"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/check_in_text_size"
            android:textAllCaps="false"
            android:id="@+id/cancel"
            android:background="@drawable/sign_in_round"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/views_height"
            android:text="Yes"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/username_password_top_bottom_margin"
            android:textColor="@color/main_font"
            android:textAllCaps="false"
            android:textSize="@dimen/check_in_text_size"
            android:id="@+id/ok"
            android:background="@drawable/sign_in_round"/>
    </LinearLayout>
</LinearLayout>